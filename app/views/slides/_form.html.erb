<%= form_for(@slide) do |f| %>
  <% if @slide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@slide.errors.count, "error") %> prohibited this slide from being saved:</h2>

      <ul>
      <% @slide.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  

  <div class="field">
     <%= image_tag(@slide.image) if @slide.image? %>  <br /> <br />
         <%= f.label 'вебрать изображение (размер 1080х300)' %><br />
         <%= f.file_field :image, :length => 5 %>
         <%= f.hidden_field :image_cache %> 
    </div>
    
  <div class="field">
     <%= f.check_box :is_show %>
     <%= f.label "Показывать изображение" %>
  </div>
  <div class="actions">
    <%= f.submit "Готово" %>
  </div>
<% end %>
