<h1 style = "color:gray;"> <%= @ad.name%></h1>
<%= form_for(@ad) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
   
    <div class="field">
     <%= image_tag(@ad.image) if @ad.image? %>  <br /> <br />
         <%= f.label 'рекламный банер' %><br />
         <%= f.file_field :image, :length => 5 %>
         <%= f.hidden_field :image_cache %> 
    </div>
    
   <div class="field">
     <%= f.check_box :status %>
     <%= f.label "Включить банер" %>
  </div>
  
  <div class="field">
    <%= f.label 'url (без http://)' %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label 'заголовок' %><br />
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit 'Готово'%>
  </div>
<% end %>
