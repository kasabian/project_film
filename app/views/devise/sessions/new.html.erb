<h2>Вход</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 
<div>
 <div class = "reg_form">
  <table border='0' class = "reg">
    <tr>
    <td><%= f.label :email%></td>
    <td><%= f.email_field :email %></td>
    </tr>
    <tr>
    <td><%= f.label 'пароль' %> </td>
     <td><%= f.password_field :password %> </td>
    </tr>
   </table>

   <% if devise_mapping.rememberable? -%>
     <div style="color:black"><%= f.check_box :remember_me %> <%= f.label 'Запомнить меня', :style => "color:black" %></div>
   <% end -%>

    <div><%= f.submit "Войти", :class => "submit" %></div><br /> <br /> <br />
  <% end %>
 </div>
 
 <div class = "soc_reg">
    <b>или</b>
    <%=link_to image_tag("/vkontakte.png",:height=> "70px;"),user_omniauth_authorize_path(:vkontakte)%> 
    <%=link_to image_tag("/facebook_icon.png",:height=> "70px;"), user_omniauth_authorize_path(:facebook)%>
 </div>
 
 
</div>

