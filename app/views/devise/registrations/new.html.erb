<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
   <%= devise_error_messages!%> 
   
   
   <table border='0' class = "reg">
  <tr>
   <td><%= f.label 'ник (только уникальный)' %></td>
   <td> <%= f.text_field :username %></td>
  </tr>
  <tr>
   <td><%= f.label 'emeil (только уникальный)' %></td>
   <td> <%= f.email_field :email %></td>
  </tr>
  
  <tr>
   <td><%= f.label "пароль (минимум 6 знаков)" %></td>
   <td> <%= f.password_field :password %></td>
  </tr>
  <tr>
   <td><%= f.label "повторите пароль" %></td>
   <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>

  <div><%= f.submit "Зарегестрироваться", :class => "submit" %></div><br /> <br /> <br />
<% end %>

<%= render "devise/shared/links" %>
